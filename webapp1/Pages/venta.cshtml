@page
@model MyApp.Namespace.ventaModel
@{
}
 <h1 class="display-4">Ventas</h1>
   



@{

     string[] titulos = new string[]{
    "Nombre","Cantidad","Precio","Pago"
    };

    string[] nombres = new string[]{
    "Gansito","Galletas","Dulce","Refresco", "prueba"
    };

    int[] cantidades = new int[]{
    20, 30, 40, 10,20
    };

    int[] precios = new int[]{
    11, 12, 5, 15,50
    };

    int[] pagos = new int [cantidades.Length];
    for (int i = 0; i < cantidades.Length; i++){

        int pago = cantidades[i] * precios[i];
        pagos[i] = pago;

    }

    

}


<table class="table table-striped">

    <tr> 
    
    @{
        foreach(string titulo in titulos){

            <th> @titulo </th>
        }
    }

    
    </tr>
@{

    for (int i = 0; i < nombres.Length; i++ ){

        <tr> 
        <td> @nombres[i] </td>
        <td> @cantidades[i] </td>
        <td> $@precios[i].00 </td>
        <td> $@pagos[i].00 </td>
        </tr>
    }
    int suma = pagos.Sum();
    <tr> 
    
        <td colspan="4" class="tdTotal">Total $@suma.00</td>

    </tr>  
}
   
 </table>


